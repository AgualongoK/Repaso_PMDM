<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_numeros"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_uno"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="1"
            android:backgroundTint="@color/verde_operaion"
            ></Button>

        <Button
            android:id="@+id/boton_dos"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="2"
            android:backgroundTint="@color/verde_operaion"
            ></Button>

        <Button
            android:id="@+id/boton_tres"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="3"
            android:backgroundTint="@color/gris_science"
            ></Button>

        <Button
            android:id="@+id/boton_cuatro"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="4"
            android:backgroundTint="@color/gris_science"
            ></Button>
    </LinearLayout>

</LinearLayout>