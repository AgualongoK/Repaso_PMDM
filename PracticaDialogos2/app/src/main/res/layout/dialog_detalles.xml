<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp">

    <TextView
        android:text="Detalles del trabajador"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"></TextView>

    <LinearLayout
        android:layout_margin="@dimen/margin_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Nombre:"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/dialog_nombre"
            android:text="Nombre completo"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Apellidos:"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/dialog_apellidos"
            android:text="Apellidos completos"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Correo:"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/dialog_correo"
            android:text="correo completo"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Edad:"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/dialog_edad"
            android:text="Edad completa"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Puesto de trabajo:"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/dialog_puesto"
            android:text="Puesto trabajo completo"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <Button
        android:id="@+id/boton_cerrar"
        android:text="Cerrar"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>

</LinearLayout>